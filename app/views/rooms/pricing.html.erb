<div class="row">
	<div class="col-md-3">
		<%= render 'room_menu' %>
	</div>

	<div class="col-md-9">
		<div class="panel panel-default">

			<div class="panel-heading">
				Pricing
			</div>

			<div class="panel-body">

				<%= form_for @room do |f| %>

					<div class="form-group">
						<label for="">Price</label>
						<%= f.text_field :price, placeholder: "e.g. $12.00", class: "form-control", required: true %>
					</div>					

					<div class="text-center">
						<%= f.submit "Save", class: "btn btn-form" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
