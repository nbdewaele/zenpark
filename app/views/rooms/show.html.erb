<!-- Image -->

<div class="row">
	<div class="col-md-12">
		<%= image_tag @room.cover_photo(nil), width: "100%" %>
	</div>
</div>
<br>

<div class="row">
	<!-- left panel -->
	<div class="col-md-8">

		<!-- listing name -->
		<div class="row">
			<div class="col-md-8">
				<h1><%= @room.listing_name %></h1>
				<%= @room.address %>
			</div>
			<div class="col-md-4 text-center">
				<%= image_tag avatar_url(@room.user), class: "img-circle avatar-large" %>
				<br><br>
			</div>
		</div>
		<hr/>

		<!-- room info -->

		<div class="row text-babu">
			<div class="row text-center space-1">
				<div class="col-md-3">
					<i class="fa fa-home fa-2x"></i>
				</div>
				<div class="col-md-3">
					<i class="fa fa-laptop fa-2x"></i>
				</div>
				<div class="col-md-3">
					<i class="fa fa-user fa-2x"></i>
				</div>
			</div>

			<div class="row text-center">
				<div class="col-md-3"><%= @room.home_type %></div>

				<div class="col-md-3"><%= pluralize(@room.room_type, "Rooms") %></div>

				<div class="col-md-3"><%= pluralize(@room.accommodate, "Guest") %></div>
			</div>
		</div>
		<hr>

		<!-- about -->
		<div class="row">
			<div class="col-md-12">
				<p><%= @room.summary %></p>
			</div>
		</div>
		<hr>

		<!-- amenities -->
		<div class="row">
			<div class="col-md-3">
				<h4>Amenities</h4>
			</div>

			<div class="col-md-9">
				<div class="row">
					<div class="col-md-6">
						<ul class="amenities">
							<li>"<%= 'text-line-through' if !@room.is_tv %>">TV</li>
							<li>"<%= 'text-line-through' if !@room.is_pet_friendly %>">Pet Friendly</li>
							<li>"<%= 'text-line-through' if !@room.is_parking %>">On Site Parking</li>
						</ul>
					</div>
					<div class="col-md-6">
						<ul class="amenities">
							<li>"<%= 'text-line-through' if !@room.is_fridge %>">Refrigerator</li>
							<li>"<%= 'text-line-through' if !@room.is_quiet %>">Quiet</li>
							<li>"<%= 'text-line-through' if !@room.is_coffee_tea %>">Coffee/Tea</li>
						</ul>
					</div>
					<div class="col-md-6">
						<ul class="amenities">
							<li>"<%= 'text-line-through' if !@room.is_snacks %>">Snacks</li>
							<li>"<%= 'text-line-through' if !@room.is_wifi %>">Wifi</li>
							<li>"<%= 'text-line-through' if !@room.is_bw_printing %>">Black &amp; White Printer</li>
						</ul>
					</div>
					<div class="col-md-6">
						<ul class="amenities">
							<li>"<%= 'text-line-through' if !@room.is_color_printing %>">Color Printer</li>
							<li>"<%= 'text-line-through' if !@room.is_bw_copying %>">Black &amp; White Copier</li>
							<li>"<%= 'text-line-through' if !@room.is_color_copying %>">Color Copier</li>
						</ul>
					</div>

				</div>
			</div>
		</div>
		<hr>

		<!-- carousel -->
		<div class="row">
			<% if @photos.length > 0 %>

				<div id="myCarousel" class="carousel slide" data-ride="carousel">
				  <!-- Indicators -->
				  <ol class="carousel-indicators">
				    <% @photos.each do |photo| %>
				    	<li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
						<% end %>
				  </ol>

			  <!-- Wrapper for slides -->
			  <div class="carousel-inner">
					<% @photos.each do |photo| %>
						<div class="item <%= 'active' if photo.id == @photos[0].id %>">
							<%= image_tag photo.image.url() %>
						</div>
					<% end %>
			  </div>

			  <!-- Left and right controls -->
			  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
			    <span class="glyphicon glyphicon-chevron-left"></span>
			    <span class="sr-only">Previous</span>
			  </a>
			  <a class="right carousel-control" href="#myCarousel" data-slide="next">
			    <span class="glyphicon glyphicon-chevron-right"></span>
			    <span class="sr-only">Next</span>
			  </a>
			</div>
			<% end %>
		</div>
		<hr>
	</div>



	<!-- right panel -->
	<div class="col-md-4">
		<!-- reservation form -->

	</div>
</div>
