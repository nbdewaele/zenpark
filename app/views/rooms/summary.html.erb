<div class="row">
<!-- 	<div class="col-md-3">
	</div> -->
	<div class="col-md-9">
		<div class="panel panel-default">

			<div class="panel-heading">
				Description
			</div>

			<div class="panel-body">
				<div>		
					<%= render 'room_menu' %>
				</div>
				<div id="summary-container" class="container">
					<%= form_for @room do |f| %>

						<div class="form-group">
							<label for="">Listing Name</label>
							<%= f.text_field :listing_name, placeholder: "What is your listing name?", class: "form-control", required: true %>
						</div>
				

	
						<div class="form-group">
							<label>Summary</label>
							<%= f.text_area :summary, rows: 5, placeholder: "Describe the workspace", class: "form-control", required: true %>
						</div>
					

						<%= f.submit "Save", id:"summary-save", class:"btn btn-form" %>

					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
