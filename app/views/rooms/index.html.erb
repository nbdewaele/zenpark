<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your listings active", rooms_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservation", your_reservations_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item active">
				<%= link_to "Your Office Plans", your_trips_path, class: "sidebar-link active" %>
			</li>
		</ul>
	</div>

	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Listings
			</div>
			<div class="panel-body">

				<% @rooms.each do |room| %>
					<div class="row">
						<div class="col-md-2">

							<!-- listing name -->
							<div class="col-md-7">
								<h4><%= room.listing_name %></h4>
							</div>
						</div>
						<p><%= room.summary %></p>

					</div>
					<hr>

					PASTE - AMENITIES
						<!-- amenities -->
						<div class="row">
							<div class="col-md-3">
								<h4>Amenities</h4>
							</div>

							<div class="col-md-9">
								<div class="row">
									<div class="col-md-6">
										<ul class="amenities">
											<li class="<%= !room.is_tv ? 'text-line-through' : nil %>">TV</li>
											<li class="<%= !room.is_pet_friendly ? 'text-line-through' : nil %>">Pet Friendly</li>
											<li class="<%= !room.is_parking ? 'text-line-through' : nil %>">On Site Parking</li>
										</ul>
									</div>
									<div class="col-md-6">
										<ul class="amenities">
											<li class="<%= !room.is_fridge ? 'text-line-through' : nil %>">Refrigerator</li>
											<li class="<%= !room.is_quiet ? 'text-line-through' : nil %>">Quiet</li>
											<li class="<%= !room.is_coffee_tea ? 'text-line-through' : nil %>">Coffee/Tea</li>
										</ul>
									</div>
									<div class="col-md-6">
										<ul class="amenities">
											<li class="<%= !room.is_snacks ? 'text-line-through' : nil %>">Snacks</li>
											<li class="<%= !room.is_wifi ? 'text-line-through' : nil %>">Wifi</li>
											<li class="<%= !room.is_bw_printing ? 'text-line-through' : nil %>">Black &amp; White Printer</li>
										</ul>
									</div>
									<div class="col-md-6">
										<ul class="amenities">
											<li class="<%= !room.is_color_printing ? 'text-line-through' : nil %>">Color Printer</li>
											<li class="<%= !room.is_bw_copying ? 'text-line-through' : nil %>">Black &amp; White Copier</li>
											<li class="<%= !room.is_color_copying ? 'text-line-through' : nil %>">Color Copier</li>
										</ul>
									</div>

								</div>

							</div>
						</div>
						<hr>
					<!-- carousel -->
					<div class="row">

							<div id="myCarousel" class="carousel slide" data-ride="carousel">
							  <!-- Indicators -->
							  <ol class="carousel-indicators">
									<% if room.photos.length > 0 %>
							    <% room.photos.each do |photo| %>
							    	<li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
									<% end %>

							  </ol>

						  <!-- Wrapper for slides -->
						  <div class="carousel-inner">
								<% room.photos.each do |photo| %>
									<div class="item <%= 'active' if photo.id == room.photos[0].id %>">
										<%= image_tag photo.image.url, class: 'img-responsive' %>
									</div>
								<% end %>
						  </div>

						  <!-- Left and right controls -->
						  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
						    <span class="glyphicon glyphicon-chevron-left"></span>
						    <span class="sr-only">Previous</span>
						  </a>
						  <a class="right carousel-control" href="#myCarousel" data-slide="next">
						    <span class="glyphicon glyphicon-chevron-right"></span>
						    <span class="sr-only">Next</span>
						  </a>
						</div>
						<% end %>
					</div>
					<hr>

					<div class="col-md-4">
						<!-- reservation form -->

						<%= render 'reservations/form', room: room %>

						<!-- <%= form_for([@room, @room.reservations.new]) do |f| %>
						<%= f.submit "Book Now", id: "btn_book", class: "btn btn-normal btn-block", disabled: true %>
					<% end %> -->

					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
