<%= stylesheet_link_tag 'home' %>
<body class="profilebackground" >
<div class="row">
	<div class="col-md-3">
	
	</div>

	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Office Plans
			</div>
			<div class="panel-body">
	<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your listings", rooms_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservation", rooms_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Office Plans", your_trips_path, class: "sidebar-link active" %></li>
		</ul>
				<% @trips.each do |trip| %>
					<div class="row">
						<div class="col-md-2">
							<%= trip.start_date.start_time('%v') %>
						</div>

						<div class="col-md-2">
							<%= link_to room_path(trip.room) do %>
								<%= image_tag trip.cover_photo(:thumb) %>
							<% end %>
						</div>
						<div class="col-md-8">
							<%= link_to trip.room.listing_name, room_path(trip.room) %>
							<span class="pull-right text-center">
								<%= image_tag avatar_url(trip.room.user), class: "img-circle avatar-medium" %><br>
								<%= link_to user_path(trip.room.user) do %>
									<%= trip.room.user.fullname %>
								<% end %>
							</span>
						</div>
					</div>
					<hr>
				<% end %>
			</div>
		</div>
	</div>
</div>
</body>